{{ ansible_managed | comment }}

[Unit]
Description=Prometheus collector - {{ metrics_parent_role_name }}
After=network-online.target

[Service]
Type=notify
User=nerdnode
ExecStart=/opt/pipx/venvs/ansible-core/bin/python3 /etc/deeep-network/collectors/{{ metrics_parent_role_name }}.py
KillSignal=SIGINT
Restart=on-failure
WatchdogSec=60

[Install]
WantedBy=multi-user.target
